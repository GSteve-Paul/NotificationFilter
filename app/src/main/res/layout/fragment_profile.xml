<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".front.fragment.Profile">
    <androidx.constraintlayout.widget.ConstraintLayout app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintLeft_toLeftOf="parent"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <Button
                android:text="全局"
                android:textSize="20dp"
                android:textColor="#6EB5ED"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintWidth_percent="0.5"
                android:background="#DBF6ED"
                android:id="@+id/globalButton"
                android:layout_width="0dp"/>

        <Button
                android:text="规则"
                android:textSize="20dp"
                android:textColor="#6EB5ED"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintWidth_percent="0.5"
                android:background="#00000000"
                android:id="@+id/ruleButton"
                android:layout_width="0dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>