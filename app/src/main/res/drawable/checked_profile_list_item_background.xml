<!-- res/drawable/list_item_rounded_bg.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item>

        <shape>
            <solid android:color="#1C000000"/>
            <corners android:radius="16dp"/>

            <padding android:left="4dp" android:top="4dp" android:right="4dp"
                     android:bottom="4dp"/>
        </shape>
    </item>

    <!-- Main background layer -->
    <item>
        <shape>
            <solid android:color="#80FFDAB9"/>
            <corners android:radius="16dp"/>
            <padding android:left="16dp" android:top="16dp" android:right="16dp"
                     android:bottom="16dp"/>
            <gradient
                    android:startColor="#80DDA878"
                    android:endColor="#80AC659F"
                    android:type="linear"
                    android:angle="270"/>
        </shape>
    </item>
</layer-list>